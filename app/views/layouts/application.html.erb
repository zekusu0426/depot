<!DOCTYPE html>
<html lang="ja">
<head>
  <title>Pragprog Books オンラインストア</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body class='<%= controller.controller_name %>'>
<div id="banner">
  <%= form_tag store_path, class: 'locale', method: :get do %>
  <%= select_tag 'set_locale',
  options_for_select(LANGUAGES, I18n.locale.to_s),
  onchange: 'this.form.submit()' %>
  <%= submit_tag 'submit' %>
  <%= javascript_tag "$('.locale input').hide()" %>
  <% end %>
  <%= image_tag("logo.png") %>
  <%= @page_title || t('.title') %>
</div>
<div id="columns">

<div id="side">
  <ul>
    <li><a href="http://www...."><%= t('.home') %></a></li>
    <li><a href="http://www...."><%= t('.questions') %></a></li>
    <li><a href="http://www...."><%= t('.news') %></a></li>
    <li><a href="http://www...."><%= t('.contact') %></a></li>
    <% if @cart %>
    <li><%= link_to('カート',cart_url(session[:cart_id])) %></li>
    <% end %>
    <li><a href= "#"><%= @t %></a></li>
    <li><a herf= "#"><%= @counter %></a></li>

  </ul>

  <% if @user %>
  <ul>
    <li><a href="#">こんにちは<%= @user.name %></a></li>
    <li><%= link_to '注文', orders_path %></li>
    <li><%= link_to '商品', products_path %></li>
    <li><%= link_to 'ユーザ', users_path %></li>
  </ul>
  <%= button_to 'ログアウト', logout_path, method: :delete %>
  <% end %>
</div>


<div id="main">
  <%= yield %>
</div>

</div>


</body>
</html>

